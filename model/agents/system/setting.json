      "comparison": "<",
      "critical_value": 0
    },
    {
      "name": "cpu_dpc_usage",
      "comparison": "<",
      "critical_value": 0
    },
    {
      "name": "cpu_interrupt_usage",
      "comparison": "<",
      "critical_value": 0
    },
    {
      "name": "total_swap",
      "comparison": "<",
      "critical_value": 0
